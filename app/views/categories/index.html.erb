<% if can? :create, Category %>
    <h3 class="section-title">Create Category</h3>
    <%= form_for(@category,:remote => true, html: {role: 'form', class: 'form-horizontal'}) do |f| %>
        <div class="form-group">
          <div class="col-sm-10 col-xs-8">
            <%= f.text_field :name, {class: 'form-control', placeholder: 'Name'} %>
          </div>
          <div class="col-sm-2 col-xs-1">
            <%= f.submit 'Create', class: 'btn btn-default btn-lg' %>
          </div>
        </div>
    <% end %>
    <hr />
<% end %>

<ul id="categories" class="list-group list-inline">
  <%= render :partial => @categories.order(name: :asc) %>
</ul>