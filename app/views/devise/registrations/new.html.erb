<h2>Sign up</h2>

<div class="panel-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:role => 'form', :class => 'entry-form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Username' %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: 'Email Address' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm Password' %>
    </div>
    <div class="form-group">
      <%= f.submit "Register Now", class: 'btn btn-default btn-lg' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>