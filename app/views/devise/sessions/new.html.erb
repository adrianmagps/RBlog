<h2>Sign in</h2>

<div class="panel-body">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => 'entry-form'}) do |f|%>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, class: 'form-control', autocomeplete: 'off', placeholder: 'Email Address' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    </div>
    <div class="form-group">
      <div class="row">
        <%- if devise_mapping.rememberable? -%>
          <div class="col-md-6">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Remember me' %>
          </div>
        <% end -%>
        <%- if devise_mapping.recoverable? %>
          <div class="col-md-6">
            <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'forgot-password pull-right' %>
          </div>
        <% end -%>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit 'Sign in', :class => 'btn btn-default btn-lg' %>
      <% if devise_mapping.registerable? %>
          <%= link_to 'Sign up', new_registration_path(resource_name), class: 'btn btn-lg'  %>
      <% end %>
    </div>
  <% end %>
